<h2>EDIT PROFILE</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :email, "EMAIL", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :password, "PASSWORD", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password, autocomplete: "off",
      placeholder: "Leave blank if you do not wish to change" %>
    </div>
  </div>

  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :password_confirmation, "PASSWORD CONFIRMATION", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
    </div>
    <div class="small-9 columns">
      Needed in order to update profile:
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :current_password, "CURRENT PASSWORD", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button green-button" %>
<% end %>

  <%= button_to "Cancel Account", registration_path(resource_name),
  data: { confirm: "Are you sure?" }, method: :delete, class: "button red-button" %>
  </div>

<%= link_to "Back", :back %>
