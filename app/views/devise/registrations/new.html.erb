<h2>SIGN UP</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :email, "EMAIL", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :password, "PASSWORD", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.password_field :password, autocomplete: "off",
      placeholder: "#{@minimum_password_length} characters minimum" %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :password_confirmation, "PASSWORD CONFIRMATION", class: "right inline" %>
    </div>
    <div class="small-9 columns">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class: "green-button button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
