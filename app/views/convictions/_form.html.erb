<%= form_for(@conviction, url: client_convictions_path) do |f| %>
  <% if @conviction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conviction.errors.count, "error") %> prohibited this conviction from being saved:</h2>

      <ul>
      <% @conviction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :crime_name %><br>
    <%= f.text_field :crime_name %>
  </div>
  <div class="field">
    <%= f.label :rcw %><br>
    <%= f.text_field :rcw %>
  </div>
  <div class="field">
    <%= f.label :subsection %><br>
    <%= f.text_field :subsection %>
  </div>
  <div class="field">
    <%= f.label :sentence %><br>
    <%= f.number_field :sentence, min: 0 %>
  </div>
  <div class="field">
    <%= f.label :state_committed %><br>
    <%= f.select :state_committed, options_for_select(Conviction::STATE_COMMITTED,
    params[:conviction] ? params[:conviction][:state_committed] : nil),
    {include_blank: "Please select"} %>
  </div>
  <div class="field">
    <%= f.label :ij_name %><br>
    <%= f.select :ij_name, options_for_select(Conviction::IJ_NAME,
    params[:conviction] ? params[:conviction][:ij_name] : nil),
    {include_blank: "Please select"} %>
  </div>
  <div class="field">
    <%= f.label :nta_charges %><br>
    <%= f.text_field :nta_charges %>
  </div>
  <div class="field">
    <%= f.label :ij_decision_date %><br>
    <%= f.date_field :ij_decision_date %>
  </div>
  <div class="field">
    <%= f.label :ij_finding %><br>
    <%= f.text_field :ij_finding %>
  </div>
  <%= f.fields_for :conviction_grounds do |builder| %>
  <div class="field">
    <%= builder.label :gor_name, builder.object.gor_name %><br>
    <%= builder.hidden_field :gor_name, value: builder.object.gor_name %>
    <%= %>
  </div>
  <div class="field">
    <%= builder.select(:status, ConvictionGround::STATUS_OPTION, :include_blank => "Please Select")  %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, row: 3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
