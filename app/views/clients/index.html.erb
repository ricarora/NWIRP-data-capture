<h2>CLIENTS</h2>
<% @clients.each do |client| %>
<div class="panel">
  <table role="grid" summary="Client">
    <tr>
      <th>A#</th>
      <td><%= client.a_number %></td>
    </tr>
    <tr>
      <th>LAST NAME</th>
      <td><%= client.last_name %></td>
    </tr>
    <tr>
      <th>FIRST NAME</th>
      <td><%= client.first_name %></td>
    </tr>
    <tr>
      <th>NATIONALITY</th>
      <td><%= client.nationality %></td>
    </tr>
    <tr>
      <th>ETHNICITY</th>
      <td><%= client.ethnicity.join("<br>").html_safe %></td>
    </tr>
    <tr>
      <th>GENDER</th>
      <td><%= client.gender %></td>
    </tr>
    <tr>
      <th>RELIEF SOUGHT</th>
      <td>
        <% client.client_reliefs.each do |relief| %>
          <div><%= relief.relief_name %></div>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>REPRESENTED</th>
      <td><%= client.represented %></td>
    </tr>
    <tr>
      <th>DRRU CASE</th>
      <td><%= translate(client.drru_case.class) %></td>
    </tr>
    <tr>
      <th>ASSESSMENT DATE(S)</th>
      <td>
        <% client.assessments.each do |assessment| %>
          <div><%= (assessment.date).strftime("%D") %></div>
        <% end %>
      </td>
    </tr>
  </table>
  <td><%= link_to 'VIEW CLIENT', client, class: "update-link" %></td>
  <td><%= link_to 'EDIT CLIENT', edit_client_path(client), class: "update-link" %></td>
</div>
<% end %>
