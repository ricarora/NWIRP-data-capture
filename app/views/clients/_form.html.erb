<%= form_for(@client, url: clients_path) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :a_number, "A#*", class: "right inline required" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :a_number, placeholder: "XXX-XXX-XXX" %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :last_name, "LAST NAME*", class: "right inline required" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns" >
      <%= f.label :first_name, "FIRST NAME", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :nationality, "NATIONALITY", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.select :nationality, options_for_select(Client::NATIONALITY,
      params[:client] ? params[:client][:nationality] : nil),
      {include_blank: "Please select"} %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :ethnicity, "ETHNICITY", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.select :ethnicity, options_for_select(Client::ETHNICITY,
      params[:client] ? params[:client][:ethnicity] : nil),
      {}, {multiple: true, class: "multiple-selections"} %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :gender, "GENDER", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.select :gender, options_for_select(Client::GENDER,
      params[:client] ? params[:client][:gender] : nil),
      {include_blank: "Please select"} %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :represented, "REPRESENTED", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.select :represented, options_for_select(Client::REPRESENTED,
      params[:client] ? params[:client][:represented] : nil),
      {include_blank: "Please select"} %>
    </div>
  </div>
  <div class="field row">
    <div class="small-3 columns">
      <%= f.label :drru_case, "DRRU CASE", class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <label><%= f.check_box :drru_case %><span class="label-text"></span></label>
    </div>
  </div>
  <%= f.fields_for :client_reliefs do |builder| %>
    <div class="field row">
      <div class="small-3 columns">
        <div id="relief_sought_options", data-url="<%= ReliefSought.all.sort_by {|a| a.name }.to_json %>">
        </div>
        <%= builder.label :relief_name, "RELIEF SOUGHT", class: "right inline" %>
        <%#= f.text_field(:relief_name, :name => "client_build_form[relief_name][]") %>
      </div>
      <div class="small-6 columns relief_field">
      </div>
        <a href="#" id="add_field">Add another Relief Sought</a>
    </div>
  <% end %>
  <%= f.fields_for :assessments do |builder| %>
    <div class="field row">
      <div class="small-3 columns">
        <%= builder.label :date, "ASSESSMENT DATE*", class: "right inline required" %>
      </div>
      <div class="small-6 columns assessment_field">
      </div>
      <a href="#" id="add_assessment_field">Add another Assessment</a>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Create Client", class: "button round" %>
  </div>
<% end %>
